{
  "clang-format.style": "{BasedOnStyle: Google, ColumnLimit: 120}",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.vscode": true,
    // Golang
    "**grpc.pb.go": true,
    "**pb.go": true,
    "**pulsar.go": true,
  },
  "go.testFlags": ["-v"],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
        "-c", "${workspaceFolder}/.golangci.yml", "--fast"
    ],
    "cSpell.words": [
      "actorutils",
      "autocli",
      "Bech",
      "cosmossdk",
      "Delegators",
      "errorsmod",
      "Inferer",
      "inferers",
      "msgserver",
      "protobuf",
      "quantile",
      "reputers",
      "Wrapf"
    ],
}